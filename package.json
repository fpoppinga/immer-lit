{
    "name": "immer-lit",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build": "webpack --config webpack.config.js",
        "test": "jest",
        "serve": "webpack-dev-server --config webpack.config.js"
    },
    "jest": {
        "testURL": "http://localhost/",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/__tests__/*.+(ts|tsx|js)"
        ]
    },
    "dependencies": {
        "immer": "^1.5.0",
        "lit-html": "^0.10.2"
    },
    "devDependencies": {
        "@types/jest": "^23.3.1",
        "clean-webpack-plugin": "^0.1.19",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.4.2",
        "prettier": "^1.14.0",
        "ts-jest": "^23.1.2",
        "ts-loader": "^4.4.2",
        "typescript": "^3.0.1",
        "webpack": "^4.16.4",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.5"
    }
}
